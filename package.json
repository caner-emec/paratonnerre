{
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/figlet": "^1.5.8",
    "@types/node": "^22.5.5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
